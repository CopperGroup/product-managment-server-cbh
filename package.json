{
    "name": "story-app-backend",
    "version": "1.0.0",
    "description": "Backend service for story and blog management with user authentication (Clerk) and media storage (Cloudflare R2).",
    "main": "dist/server.js",
    "scripts": {
      "build": "tsc",
      "start": "node dist/server.js",
      "dev": "ts-node-dev --respawn --transpile-only src/server.ts",
      "lint": "eslint src/**/*.ts",
      "format": "prettier --write \"src/**/*.ts\"",
      "clean": "rm -rf dist"
    },
    "keywords": [
      "nodejs",
      "express",
      "mongodb",
      "mongoose",
      "clerk",
      "cloudflare",
      "r2",
      "stories",
      "blogs",
      "typescript",
      "esm"
    ],
    "author": "Your Name <your.email@example.com>",
    "license": "MIT",
    "dependencies": {
        "@clerk/express": "^1.7.12",
        "cors": "^2.8.5",
        "dotenv": "^16.4.5",
        "express": "^4.19.2",
        "express-mongo-sanitize": "^2.2.0",
        "express-rate-limit": "^7.3.1",
        "fast-r2": "^1.0.0",
        "helmet": "^7.1.0",
        "hpp": "^0.2.3",
        "mongoose": "^8.5.1",
        "multer": "^2.0.2",
        "zod": "^4.0.8"
    },
    "devDependencies": {
      "@types/express": "^4.17.21",
      "@types/mongoose": "^5.11.97",
      "@types/node": "^20.14.10",
      "@types/cors": "^2.8.17",
      "@types/hpp": "^0.2.6",
      "@types/express-rate-limit": "^6.0.0",
      "@types/express-mongo-sanitize": "^1.1.5",
      "@types/multer": "^1.4.11",
      "typescript": "^5.5.3",
      "ts-node": "^10.9.2",
      "ts-node-dev": "^2.0.0",
      "eslint": "^8.57.0",
      "prettier": "^3.3.3",
      "@typescript-eslint/eslint-plugin": "^6.21.0",
      "@typescript-eslint/parser": "^6.21.0",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-prettier": "^5.1.3"
    },
    "engines": {
      "node": ">=18.0.0"
    }
  }