{
    "compilerOptions": {
      "target": "ES2020",                             /* Specify ECMAScript target version for generated JavaScript. */
      "lib": ["ES2020"],                               /* Specify library files to be included in the compilation. */
      "module": "CommonJS",                            /* CHANGE: Specify module code generation as CommonJS */
      "rootDir": "./src",                              /* Specify the root directory of input files. */
      "outDir": "./dist",                              /* Redirect output structure to the directory. */
      "esModuleInterop": true,                         /* Enable interoperability between CommonJS and ES Modules. */
      "strict": true,                                  /* Enable all strict type-checking options. */
      "moduleResolution": "Node",                      /* Use 'Node' for module resolution */
      "skipLibCheck": true,                            /* Skip type checking all .d.ts files. */
      "resolveJsonModule": true,                       /* Allow importing .json files */
      "sourceMap": true,                               /* Generates corresponding '.map' file. */
      "baseUrl": "./",                                 /* Base directory to resolve non-relative module names. */
      "paths": {
        "*": ["node_modules/*", "src/types/*"]         /* Allow imports from node_modules and custom types */
      },
      "types": ["node"]                                /* Include Node.js types */
    },
    "include": ["src"],                              /* Specify files to include in compilation */
    "exclude": ["node_modules", "dist"]                /* Specify files to exclude from compilation */
  }